- moment.loadPersian({usePersianDigits: true})
block vars
  - var bodyClass = null
  - var activePath = null
  - var mathjax = false
doctype html
html(lang="en")
  head
    block head
      <!-- Global site tag (gtag.js) - Google Analytics -->
      script(async src="//www.googletagmanager.com/gtag/js?id=#{locals.gaTrackingID}")
      script.
        window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', '#{locals.gaTrackingID}');

      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      meta(name="description" content=locals.description)
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      | !{ livereloadScript  }
      link(rel='alternate', title=locals.name, type='application/atom+xml', href=locals.url + '/feed.xml')
      
      //- favicons
      link(rel="apple-touch-icon" sizes="57x57" href=contents.css.images.favicons["apple-icon-57x57.png"].url)
      link(rel="apple-touch-icon" sizes="60x60" href=contents.css.images.favicons["apple-icon-60x60.png"].url)
      link(rel="apple-touch-icon" sizes="72x72" href=contents.css.images.favicons["apple-icon-72x72.png"].url)
      link(rel="apple-touch-icon" sizes="76x76" href=contents.css.images.favicons["apple-icon-76x76.png"].url)
      link(rel="apple-touch-icon" sizes="114x114" href=contents.css.images.favicons["apple-icon-114x114.png"].url)
      link(rel="apple-touch-icon" sizes="120x120" href=contents.css.images.favicons["apple-icon-120x120.png"].url)
      link(rel="apple-touch-icon" sizes="144x144" href=contents.css.images.favicons["apple-icon-144x144.png"].url)
      link(rel="apple-touch-icon" sizes="152x152" href=contents.css.images.favicons["apple-icon-152x152.png"].url)
      link(rel="apple-touch-icon" sizes="180x180" href=contents.css.images.favicons["apple-icon-180x180.png"].url)
      link(rel="icon" type="image/png" sizes="192x192"  href=contents.css.images.favicons["android-icon-192x192.png"].url)
      link(rel="icon" type="image/png" sizes="32x32" href=contents.css.images.favicons["favicon-32x32.png"].url)
      link(rel="icon" type="image/png" sizes="96x96" href=contents.css.images.favicons["favicon-96x96.png"].url)
      link(rel="icon" type="image/png" sizes="16x16" href=contents.css.images.favicons["favicon-16x16.png"].url)
      link(rel="manifest" href=contents.css.images.favicons["manifest.json"].url)
      meta(name="msapplication-TileColor" content="#ffffff")
      meta(name="msapplication-TileImage" content=contents.css.images.favicons["ms-icon-144x144.png"].url)
      meta(name="theme-color" content="#ffffff")
      
      
      title: block title
        | علی موسوی | #{locals.name}
      link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyClass)
    header.header
      block header
        include header

    block content

    footer.page-footer
      .container
        block footer
        .copyright.text-center
          p copyright &copy; #{ new Date().getFullYear() } #{ locals.owner_en }

    block javascripts
      script(src=contents.js['jquery-3.2.1.min.js'].url)
      script(src=contents.js['bootstrap.min.js'].url)
      script#mainJS(data-commenting='disqus' data-disqusID='#{locals.disqusID}' src=contents.js['main.js'].url)
      
      //- load mathjax only if required  
      if mathjax
        include mathjax
      //- lightbox stuff
      script(src=contents.js.colorbox['jquery.colorbox-min.js'].url)
      script(src=contents.js.colorbox['jquery.colorbox-fa.js'].url)
