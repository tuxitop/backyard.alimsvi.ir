- moment.loadPersian({usePersianDigits: true})
block vars
  - var bodyClass = null;
  - var activePath = null;
doctype html
html(lang="en")
  head
    <!-- Global site tag (gtag.js) - Google Analytics -->
    script(async src="https://www.googletagmanager.com/gtag/js?id=UA-3973192-2")
    <script>window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'UA-3973192-2');</script>

    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description" content=locals.description)
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    | !{ livereloadScript  }
    link(rel='alternate', title=locals.name, type='application/atom+xml', href=locals.url + '/feed.xml')
    title: block title
      | علی موسوی | #{locals.name}
    link(rel='stylesheet', href=contents.css['main.css'].url)
  body(class=bodyClass)
    header.header
      block header
        include header

    block content

    footer.page-footer
      .container
        block footer
        .copyright.text-center
          p copyright &copy; #{ new Date().getFullYear() } #{ locals.owner }

    block javascripts
      script(id="dsq-count-scr" src="//mrwill.disqus.com/count.js" async)
      script(src=contents.js['jquery-3.2.1.min.js'].url)
      script(src=contents.js['bootstrap.min.js'].url)

      //- lightbox stuff
      script(src=contents.js.colorbox['jquery.colorbox-min.js'].url)
      script(src=contents.js.colorbox['jquery.colorbox-fa.js'].url)
      script(src=contents.js['main.js'].url)
