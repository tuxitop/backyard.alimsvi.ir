- var postID = page.getFilename().split("/").slice(-2)[0]
- var comments = contents.comments[postID]

.container.section-container.comments
  .row
    .col-md-offset-2.col-md-8
      .container.comment-list
        if comments
          h2 #{Object.keys(comments).length} دیدگاه:
          each comment in comments
            .row
              .col-md-2.comment-header
                img.comment-avatar(src="https://www.gravatar.com/avatar/#{comment.metadata.email}?s=64")
              .col-md-10.post-comment-info
                .post-comment-author 
                  if comment.metadata.name
                    if comment.metadata.url
                      strong
                        a(href="#{comment.metadata.url}") #{comment.metadata.name}
                    else
                      strong #{comment.metadata.name}
                  else
                    strong #{ناشناس}
                .post-comment-date
                  i.fa.fa-calendar
                  span= moment.utc(comment.date).format('jDD jMMMM jYYYY')
                .post-comment-content
                  != typogr(comment.html).typogrify()
        else
          h2 دیدگاه‌ها
  
.container.section-container.comment-form
  .row
    .col-md-offset-2.col-md-8
      h3 یک دیدگاه تازه بگذارید
      
      form.post-comment(method="POST" action="#{locals.staticmanAPI}")
        input(type="hidden" name="options[slug]" value=postID)
        input(type="hidden" name="options[postID]" value=postID)
        input(type="hidden" name="options[reply_to]" value="")
        
        fieldset.form-group
          label.sr-only(for="fields[name]") Content
          textarea.form-control(type='text' name='fields[content]' rows="6" placeholder='دیدگاه خود را بگذارید. می‌توانید از مارک‌داون نیز استفاده کنید.')
        
        fieldset.form-group
          label.sr-only(for="fields[name]") Name
          .input-group
            .input-group-addon
              i.fa.fa-user
            input.form-control(type="text" name='fields[name]' placeholder='نام شما')
        
        fieldset.form-group
          label.sr-only(for="fields[email]") Email
          .input-group
            .input-group-addon
              i.fa.fa-envelope
            input.form-control(type="text" name='fields[email]' placeholder='ایمیل شما')
        
        fieldset.form-group
          label.sr-only(for="fields[url]") Website
          .input-group
            .input-group-addon
              i.fa.fa-globe
            input.form-control(type="text" name='fields[url]' placeholder='وبسایت شما')
        
        fieldset.form-group
          button.btn.btn-default(type="submit") ارسال
